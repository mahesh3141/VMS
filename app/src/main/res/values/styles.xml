<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.FixedSize">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:fontFamily">@font/font_default</item>
        <item name="fontFamily">@font/font_default</item>
    </style>
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/font_default</item>
        <item name="fontFamily">@font/font_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AlertDialogButton</item>
        <!--<item name="android:spinnerDropDownItemStyle">@color/white</item>
        <item name="android:spinnerItemStyle">@color/white</item>-->
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
